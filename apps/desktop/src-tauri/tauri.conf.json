{
  "productName": "Block Description",
  "version": "1.0.0",
  "identifier": "com.blockdescription.game",
  "build": {
    "beforeBuildCommand": "npm run build",
    "beforeDevCommand": "npm run dev",
    "devPath": "http://localhost:3000",
    "frontendDist": "../../apps/web/out"
  },
  "app": {
    "windows": [
      {
        "title": "Block Description",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["msi", "nsis"],
    "createUpdaterArtifacts": false
  }
}
